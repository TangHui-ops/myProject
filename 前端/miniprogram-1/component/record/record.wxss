/* pages/record/record.wxss */
.body{
  display: flex;
  padding:30rpx 0rpx;
  border-bottom: 2rpx black solid;
}

.head{
  width: 130rpx ;
  height: 110rpx ;
  margin: 10rpx 0rpx 0rpx 10rpx;
  border-radius:50%;
  overflow: hidden;
}

.w_name{
  height: 150rpx;
  width: 600rpx;
}

.name{
  height: 20rpx ;
  padding-left: 20rpx;
  padding-bottom:30rpx;
}

.tab-content{
  margin:10rpx;
  width: 600rpx ;
  height: 100rpx;
  color: darkgray;
  padding-left: 35rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}