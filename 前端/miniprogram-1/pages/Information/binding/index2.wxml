<form catchsubmit="formSubmit" catchreset="formReset">
 <view class="alipay">
    <text space="emsp" class="alipay_left">支付宝账号：</text>
    <input type="number" confirm-type="next" name="Alipay" placeholder="请输入手机号11位"  maxlength="11" bindinput="alipay_input" />
    <text class="right"></text>
  </view>

  <view class="alipay">
    <text space="emsp" class="alipay_left">输入验证码：</text>
    <input type="number" confirm-type="next" name="AuthCode" placeholder="请输入6位数字"  maxlength="6" bindinput="authcode_input" />
    <text class="right"></text>
  </view>

