/* pages/auditor/auditor.wxss */
.page_row{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}
.search{
  width: 75%;
  border: 2rpx solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.search input{
  margin-left: 60rpx;
  height: 60rpx;
  border-radius: 5px;
}

.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  left:25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
} 
.sousuo {
  margin-left: 15rpx;
  width: 15%;
  line-height: 150%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}


.tab_auditor {
  width: 100%;
  margin-top: 30rpx;
}
.task_list{
  width: 100%;
  height: 150rpx; 
  display: flex;
  border-bottom: 10rpx solid #eee;
}

.userinfo-avatar{
  width: 110rpx;
  height: 110rpx;
  border-radius: 100%; 
  overflow:hidden;
  margin-top: 10rpx;
  border: 12rpx solid rgba(255, 255, 255, 0.3);
}
.task_list .task_type{
  font-size: 30rpx;
  margin-top: 35rpx;
  margin-left: 20rpx;
}
.task_list .taskID{
  margin-left: 20rpx;
}
.state{
  margin-top: 10rpx;
  font-size: 26rpx;
}
button{
  height: 60rpx;
  margin-top: 45rpx;
}
